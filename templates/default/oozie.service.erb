[Unit]
Description = Oozie Server
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node.oozie.user %>

PIDFile = /tmp/oozie.pid
ExecStart = "<%= node.oozie.home %>/bin/oozied.sh start"
ExecStop = "<%= node.oozie.home %>/bin/oozied.sh stop"
LimitNOFILE = 10000

Type = forking

[Install]
WantedBy = multi-user.target
